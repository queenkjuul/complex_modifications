{
  "title": "Julie's Mods",
  "rules": 
  [
    {
      "description": "Tie Shift+Delete to my custom shortcut",
      "manipulators": 
      [
        {
          "type": "basic",
          "from": {
            "key_code": "delete_forward",
            "modifiers": 
            {
              "mandatory": ["shift"]
            }
          },
          "to": 
          [
            {
              "key_code": "k",
              "modifiers": ["left_control", "left_command", "shift", "option"]
            }
          ]
        }
      ]
    },
    {
      "description": "Paste and Match",
      "manipulators": 
      [
        {
          "type": "basic",
          "from": {
            "key_code": "v",
            "modifiers": {
              "mandatory": ["command", "shift"]
              }
            },
          "to": [
          {
            "key_code": "v",
            "modifiers": ["left_command", "left_shift", "left_option"]
          }
          ]
        }
      ]
    },
    {
      "description": "Map Control-W to Command-W and Option-W to Control-W (for nano compatibility)",
      "manipulators": 
      [
        {
          "type": "basic",
          "from": 
          {
            "key_code": "w",
            "modifiers": 
            {
              "mandatory": ["left_control"]
            }
          },
          "to": 
          [
            {
              "key_code": "w",
              "modifiers": ["left_command"]
            }
          ]
        },
	      {
          "type": "basic",
          "from": 
          {
            "key_code": "w",
            "modifiers": 
            {
              "mandatory": ["left_option"]
            }
          },
          "to": 
          [
            {
              "key_code": "w",
              "modifiers": ["left_control"]
            }
          ]
        }
      ]
    },
    {
      "description": "Change Control + a/d to Control+Arrows",
      "manipulators": 
      [
        {
          "type": "basic",
          "from": 
          {
            "key_code": "a",
            "modifiers": 
            {
              "mandatory": ["control"],
              "optional": ["any"]
            }
          },
          "to": 
          [
            {
              "key_code": "left_arrow",
              "modifiers": ["control"]
            }
          ]
        },
        {
          "type": "basic",
          "from": 
          {
            "key_code": "d",
            "modifiers": 
            {
              "mandatory": ["control"],
              "optional": ["any"]
            }
          },
          "to": 
          [
            {
              "key_code": "right_arrow",
              "modifiers": ["control"]
            }
          ]
        }
      ]
    },
    {
      "description": "Ctrl+Space to Cmd+Ctrl+Space for Windows-style emoji picker",
      "manipulators":
      [
        {
          "type":"basic",
          "from":
          {
            "key_code": "space",
            "modifiers":
            {
              "mandatory": ["left_shift"]
            }
          },
          "to":
          [
            {
              "key_code": "space",
              "modifiers": ["control", "command"]
            }
          ]
        }
      ]  
    },
    {
      "description": "Home key to the beginning of the line (Control + a)",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "home",
            "modifiers": {
              "optional": [
                "any"
              ]
            }
          },
          "to": [
            {
              "key_code": "a",
              "modifiers": [
                "left_control"
              ]
            }
          ]
        }
      ]
    },
    {
      "description": "End key to the end of the line (Control + e)",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "end",
            "modifiers": {
              "optional": [
                "any"
              ]
            }
          },
          "to": [
            {
              "key_code": "e",
              "modifiers": [
                "left_control"
              ]
            }
          ]
        }
      ]
    },
    {
      "description": "Control+Space to Control+Command+Space",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "space",
            "modifiers": {
              "mandatory": [
                "control"
              ]
            }
          },
          "to": [
            {
              "key_code": "space",
              "modifiers": [
                "control",
                "command"
              ]
            }
          ]
        }
      ]
    }
  ]
}

